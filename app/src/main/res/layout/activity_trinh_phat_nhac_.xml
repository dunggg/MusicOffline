<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_music"
    android:orientation="vertical"
    tools:context=".manage.TrinhPhatNhac_Activity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_trinhPhatNhac"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/menu_trinh_phat_nhac"
        app:navigationIcon="@drawable/ic_back" />

    <androidx.cardview.widget.CardView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="#efefef"
        app:cardCornerRadius="100dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/img_logo_trinhPhatNhac"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/logo" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">

        <TextView
            android:id="@+id/tv_music_trinhPhatNhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="Bài hát"
            android:textColor="#fcffff"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_ngheSi_trinhPhatNhac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nghệ sĩ"
            android:textColor="#B1B1B1"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_uaThich_trinhPhatNhac"
            android:layout_width="25dp"
            android:layout_height="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_favorite" />

        <ImageView
            android:id="@+id/img_danhSachPhat_trinhPhatNhac"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="20dp"
            android:onClick="danhSachPhat"
            android:src="@drawable/ic_menu_add" />

        <ImageView
            android:id="@+id/img_danhSachBaiHat_trinhPhatNhac"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:onClick="hangCho"
            android:src="@drawable/ic_playlist" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_thoiGianChay_trinhPhatNhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textColor="#fcffff"
            android:textSize="14dp" />

        <SeekBar
            android:id="@+id/seekbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:progressBackgroundTint="#B1B1B1"
            android:progressTint="#00BFF3"
            android:thumbTint="#ffffff" />

        <TextView
            android:id="@+id/tv_tongThoiGian_trinhPhatNhac"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="00:00"
            android:textColor="#fcffff"
            android:textSize="14dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_lapLai_trinhPhatNhac"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_replay" />

        <ImageView
            android:id="@+id/img_quayLai_trinhPhatNhac"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_previous" />

        <ImageView
            android:id="@+id/img_play_trinhPhatNhac"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_play2" />

        <ImageView
            android:id="@+id/img_tiepTheo_trinhPhatNhac"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_next" />

        <ImageView
            android:id="@+id/img_random_trinhPhatNhac"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_random" />

    </LinearLayout>
</LinearLayout>